generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  name         String
  password     String
  role         String        @default("user")
  picture      String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  mobileNumber String?
  businessName String?
  reservations Reservation[] @relation("UserReservations")

  @@map("users")
}

model Stall {
  id           String        @id @default(uuid())
  size         String
  location     String
  dimensions   String
  status       String        @default("AVAILABLE")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  features     String
  idealFor     String
  price        Float
  name         String        @unique
  reservations Reservation[] @relation("StallReservations")

  @@map("stalls")
}

model Reservation {
  id              String   @id @default(uuid())
  userId          String
  stallId         String
  reservationDate DateTime @default(now())
  status          String   @default("PENDING")
  qrCode          String?  @unique
  totalAmount     Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  stall           Stall    @relation("StallReservations", fields: [stallId], references: [id], onDelete: Cascade)
  user            User     @relation("UserReservations", fields: [userId], references: [id], onDelete: Cascade)
  genres          ReservationGenre[] @relation("ReservationGenres")

  @@map("reservations")
}

model Genre {
  id          String             @id @default(uuid())
  name        String             @unique  
  description String?
  createdAt   DateTime           @default(now())
  
  reservations ReservationGenre[] @relation("GenreReservations")
  
  @@map("genres")
}

model ReservationGenre {
  id            String      @id @default(uuid())
  reservationId String
  genreId       String
  
  reservation   Reservation @relation("ReservationGenres", fields: [reservationId], references: [id], onDelete: Cascade)
  genre         Genre       @relation("GenreReservations", fields: [genreId], references: [id], onDelete: Cascade)
  
  @@unique([reservationId, genreId])
  @@map("reservation_genres")
}